<div class="banner">
  <h1>Cocktails</h1>
  <%= link_to 'Add a new cocktail', new_cocktail_path %>
</div>
<div class="container">
  <div class="card-grid">
    <% @cocktails.each do |thing| %>
      <div class="card-container">
        <%= link_to '+', cocktail_path(thing), method: :delete, data: { confirm: 'Are you sure?' }, class: 'button_delete button_index' %>
        <a href="/cocktails/<%= thing.id %>" class="card-link">
          <div class="card d-flex justify-content-around align-items-center"  style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path thing.photo, height: 300, width: 400, crop: :fill %>')">
            <%= thing.name %>
          </div>
        </a>
      </div>
    <% end %>
  </div>
</div>
