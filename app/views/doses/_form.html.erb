<% units = %w[drop/s pinch/es ml/s cup/s tsp/s tbsp/s] %>

<%= simple_form_for [@cocktail, @dose] do |f| %>
  <%= f.input :measurement %>
  <%= f.input :unit, as: :select, collection: units, prompt: 'Select Unit', input_html: { class: 'select2' } %>
  <%= f.association :ingredient, input_html: { class: 'select2' } %>
  <%= f.submit 'Submit', { class: 'submit button' } %>
<% end %>
